<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/_10sdp"
    android:padding="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:background="@color/lightWhite"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp">
   <LinearLayout
        android:background="@color/lightWhite"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <com.google.android.material.card.MaterialCardView
           app:cardCornerRadius="@dimen/_40sdp"
           android:layout_margin="@dimen/_5sdp"
           android:elevation="@dimen/_8sdp"
           android:layout_width="@dimen/_60sdp"
           android:layout_height="match_parent">
           <ImageView
               android:id="@+id/imageSp1"
               android:src="@drawable/sp1"
               android:scaleType="fitXY"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>
       </com.google.android.material.card.MaterialCardView>
       <LinearLayout
           android:layout_marginLeft="@dimen/_5sdp"
           android:orientation="vertical"
           android:gravity="center_vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/titleCatId"
               android:layout_marginTop="@dimen/_5sdp"
               android:layout_marginLeft="@dimen/_5sdp"
               android:textSize="@dimen/_16sdp"
               android:textStyle="bold"
               android:text="Kids Item"
               android:textColor="@color/purple_200"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/itemCatId"
               android:layout_below="@+id/titleCatId"
               android:layout_marginTop="@dimen/_5sdp"
               android:layout_marginLeft="@dimen/_5sdp"
               android:text="10 Items"
               android:layout_marginBottom="@dimen/_8sdp"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>


<!--       <ImageView-->
<!--           android:id="@+id/right_arrowCatId"-->
<!--           android:src="@drawable/arrow_right"-->
<!--           android:layout_margin="@dimen/_10sdp"-->
<!--           android:padding="@dimen/_10sdp"-->
<!--           android:layout_alignParentRight="true"-->
<!--           android:layout_centerInParent="true"-->
<!--           android:layout_width="@dimen/_45sdp"-->
<!--           android:layout_height="@dimen/_45sdp"/>-->

   </LinearLayout>

</com.google.android.material.card.MaterialCardView>