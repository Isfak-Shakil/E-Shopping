<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ProductDetailsActivity">
        <RelativeLayout
            android:id="@+id/toolberId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/shape_rec02"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Online Shop"
                android:textColor="@color/lightWhite"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:transitionName="main_text" />

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@null"
                android:src="@drawable/back_white" />


        </RelativeLayout>
        <com.google.android.material.card.MaterialCardView
            app:cardElevation="@dimen/_8sdp"
             android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardBackgroundColor="@color/lightWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp">
            <ImageView
                android:id="@+id/productImageId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shirt" />
        </com.google.android.material.card.MaterialCardView>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productTitleId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Item Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <RatingBar
                        android:id="@+id/ratingBarId"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="4.5" />

                    <TextView
                        android:id="@+id/productPriceId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="Price:$190"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/availableSizeId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ratingBarId"
                        android:layout_alignParentStart="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="Available Size:"
                        android:textColor="@color/purple_200"
                        />
                    <TextView
                        android:id="@+id/productSizeId"
                        android:textAlignment="center"
                        android:layout_below="@id/ratingBarId"
                        android:layout_toRightOf="@id/availableSizeId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="S/M/L/XL"
                        android:textColor="@color/black"
                       />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Product Details:"
                    android:textColor="@color/purple_200"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/productDescriptionId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:minLines="4"
                    android:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document or a typeface without relying on meaningful content. Lorem ipsum may be used as a placeholder before final copy is available."
                    android:textColor="@color/black" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:elevation="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/lightWhite"
                    app:cardElevation="@dimen/_10sdp">

                    <RelativeLayout
                        android:padding="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp">

                        <TextView
                            android:id="@+id/quantityTextId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_40sdp"
                            android:text="Quantity"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/purple_200"
                          />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/quantityTextId"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_40sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/decrementBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:src="@drawable/remove_blue" />

                            <TextView
                                android:id="@+id/quantityNumTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:text="1"
                                android:textColor="@color/purple_200"
                                android:textSize="18sp" />

                            <ImageButton
                                android:id="@+id/incrementBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:src="@drawable/add_blue" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/priceTextId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_40sdp"
                            android:text="Total Price"
                            android:textSize="@dimen/_14sdp"
                            android:textAlignment="center"
                            android:textColor="@color/purple_200"
                            />

                        <TextView
                            android:id="@+id/productPrice2Id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/priceTextId"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_60sdp"
                            android:text="$100"
                            android:textColor="@color/purple_200"
                            android:textSize="@dimen/_14sdp" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@color/purple_200"
                    android:layout_marginTop="@dimen/_20sdp">

                    <Button
                        android:id="@+id/orderNowBtnId"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:elevation="0dp"
                        android:textAlignment="center"
                        android:text="Order Now"
                        android:textAllCaps="false"
                        android:textColor="@color/lightWhite"
                        />

                    <Button
                        android:id="@+id/addToCartId"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:elevation="0dp"
                        android:text="Add to cart"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</layout>

